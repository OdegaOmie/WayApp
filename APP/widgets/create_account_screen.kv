#:kivy 1.11.1


<create_account_screen>:
    
    name: "create"   
    user_name: user_name
    email: email
    password: passw
    
    canvas:
        Rectangle:
            source: 'Glending.jpg'
            pos: self.pos
            size:self.size
            

    FloatLayout:
        cols:1
        
        

        FloatLayout:
            size: root.width, root.height/2

            
            Label:
                canvas.before:
                    Color:
                        rgba: 0,0,0, 0.5 
                    Rectangle:
                        pos: self.pos
                        size: self.size
                text: "Name: "
                italic: True 
                outline_width: 2
                font_size: (root.width**2 + root.height**2) / 13**4
                pos_hint: {"x":0.1, "top":0.9}
                size_hint: 0.35,0.12

            TextInput:
                id: user_name
                font_size: (root.width**2 + root.height**2) / 14**4
                multiline: False
                pos_hint: {"x":0.45, "top":0.9}
                size_hint: 0.4, 0.12
                
            Label:
                canvas.before:
                    Color:
                        rgba: 0,0,0, 0.5 
                    Rectangle:
                        pos: self.pos
                        size: self.size
                
                text: "Email: "
                italic: True 
                outline_width: 2
                font_size: (root.width**2 + root.height**2) / 13**4
                pos_hint: {"x":0.1, "top":0.75}
                size_hint: 0.35,0.12

            TextInput:
                id: email
                font_size: (root.width**2 + root.height**2) / 13**4
                multiline: False
                pos_hint: {"x":0.45, "top":0.75}
                size_hint: 0.4, 0.12

            Label:
                canvas.before:
                    Color:
                        rgba: 0,0,0, 0.5 
                    Rectangle:
                        pos: self.pos
                        size: self.size

                text: "Password: "
                italic: True 
                outline_width: 2
                font_size: (root.width**2 + root.height**2) / 13**4
                pos_hint: {"x":0.1, "top":0.6}
                size_hint: 0.35,0.12

            TextInput:
                id: passw
                font_size: (root.width**2 + root.height**2) / 13**4
                multiline: False
                password: True
                pos_hint: {"x":0.45, "top":0.6}
                size_hint: 0.4, 0.12

        SmoothButton:
            pos_hint:{"x":0.25,"y":0.3}
            size_hint: 0.45, 0.08
            font_size: (root.width**2 + root.height**2) / 16**4
            
            back_color: 1, 0, 0, 1
            text: "Already have an Account? Log In"
            
            on_release:
                root.login()
                root.manager.current = "login"

        SmoothButton:
            pos_hint:{"x":0.275,"y":0.1}
            size_hint: 0.4, 0.12
            back_color: 0, .5, 1, 1
            font_size: (root.width**2 + root.height**2) / 13**4
            text: "Create Account"
            italic: True 
            on_release:
                root.submit()
                root.manager.current = "login"

<SmoothButton@Button>:
    background_color:(0,0,0,0)
    background_normal: ''
    back_color: (.3, .5, .8, 1)
    border_radius: [32]
    canvas.before:
        Color:
            rgba: self.back_color
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: self.border_radius

<StrokeButton@Button>:
    background_color:(0,0,0,0.5)
    background_normal: ''
    back_color: (1,0,1,1)
    border_radius: 18
    color: self.back_color
    bold: True
    canvas.before:
        Color:
            rgba: self.back_color
        Line:
            rounded_rectangle: (self.pos[0], self.pos[1], self.size[0], self.size[1], self.border_radius)
            width: 1.2
        